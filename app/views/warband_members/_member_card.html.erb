<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-xl font-semibold"><%= member.name %></h3>
      <div class="flex gap-2 mt-1">
        <span class="inline-block text-xs px-2 py-1 rounded <%= member.hero? ? 'bg-amber-100 text-amber-800' : 'bg-gray-100 text-gray-800' %>">
          <%= member.display_type %>
        </span>
        <span class="inline-block text-xs px-2 py-1 rounded bg-indigo-100 text-indigo-800">
          XP: <%= member.experience %>
        </span>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-3 gap-2 text-sm mb-4">
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">Mov</span>
      <%= member.movimiento %>"
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">L</span>
      <%= member.lucha %>+
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">P</span>
      <%= member.proyectiles %>+
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">F</span>
      <%= member.fuerza %>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">D</span>
      <%= member.defensa %>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">A</span>
      <%= member.ataques %>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">H</span>
      <%= member.heridas %>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">C</span>
      <%= member.coraje %>
    </div>
    <div class="bg-gray-50 p-2 rounded">
      <span class="font-semibold block text-gray-600">I</span>
      <%= member.inteligencia %>
    </div>
  </div>

  <% if member.might > 0 || member.will > 0 || member.fate > 0 %>
    <div class="grid grid-cols-3 gap-2 text-sm mb-4 border-t pt-3">
      <div class="bg-purple-50 p-2 rounded">
        <span class="font-semibold block text-purple-600">Might</span>
        <%= member.might %>
      </div>
      <div class="bg-blue-50 p-2 rounded">
        <span class="font-semibold block text-blue-600">Will</span>
        <%= member.will %>
      </div>
      <div class="bg-green-50 p-2 rounded">
        <span class="font-semibold block text-green-600">Fate</span>
        <%= member.fate %>
      </div>
    </div>
  <% end %>

  <% if member.warband_equipments.any? %>
    <div class="mb-3 pb-3 border-b">
      <div class="text-xs text-gray-600 font-semibold mb-2">Equipo (<%= member.warband_equipments.count %>)</div>
      <div class="flex flex-wrap gap-1">
        <% member.warband_equipments.limit(3).each do |equipment| %>
          <span class="inline-block text-xs px-2 py-1 rounded bg-blue-50 text-blue-700">
            <%= equipment.name %>
          </span>
        <% end %>
        <% if member.warband_equipments.count > 3 %>
          <span class="inline-block text-xs px-2 py-1 text-gray-500">
            +<%= member.warband_equipments.count - 3 %> más
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if member.warband_skills.any? %>
    <div class="mb-3 pb-3 border-b">
      <div class="text-xs text-gray-600 font-semibold mb-2">Skills (<%= member.warband_skills.count %>)</div>
      <div class="flex flex-wrap gap-1">
        <% member.warband_skills.limit(3).each do |skill| %>
          <span class="inline-block text-xs px-2 py-1 rounded bg-purple-50 text-purple-700">
            <%= skill.name %>
          </span>
        <% end %>
        <% if member.warband_skills.count > 3 %>
          <span class="inline-block text-xs px-2 py-1 text-gray-500">
            +<%= member.warband_skills.count - 3 %> más
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex gap-2 mt-4 pt-3 border-t">
    <%= link_to "Equipo", warband_warband_member_warband_equipments_path(@warband, member),
        class: "text-green-600 hover:text-green-800 text-sm font-semibold" %>
    <%= link_to "Skills", warband_warband_member_warband_skills_path(@warband, member),
        class: "text-purple-600 hover:text-purple-800 text-sm font-semibold" %>
    <%= link_to "Editar", edit_warband_warband_member_path(@warband, member),
        class: "text-blue-500 hover:text-blue-700 text-sm" %>
    <%= button_to "Eliminar", warband_warband_member_path(@warband, member),
        method: :delete,
        data: { turbo_confirm: "¿Estás seguro de eliminar a #{member.name}?" },
        class: "text-red-500 hover:text-red-700 text-sm" %>
  </div>
</div>
