<div class="max-w-6xl mx-auto px-4 py-8">
  <%= link_to "← Volver a #{@warband.name}", warband_path(@warband),
      class: "text-blue-500 hover:text-blue-700 mb-4 inline-block" %>

  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Miembros de <%= @warband.name %></h1>
      <p class="text-gray-600 mt-2">
        Total: <%= @members.count %> |
        Héroes: <%= @heroes.count %> |
        Guerreros: <%= @warriors.count %>
      </p>
    </div>
    <%= link_to "Añadir Miembro", new_warband_warband_member_path(@warband),
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @members.empty? %>
    <div class="bg-gray-100 border border-gray-300 rounded p-8 text-center">
      <p class="text-gray-600 mb-4">Esta warband no tiene miembros todavía</p>
      <%= link_to "Añadir primer miembro", new_warband_warband_member_path(@warband),
          class: "text-blue-500 hover:text-blue-700 font-semibold" %>
    </div>
  <% else %>
    <!-- Heroes Section -->
    <% if @heroes.any? %>
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4 text-amber-700">Héroes</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <%= render partial: 'member_card', collection: @heroes, as: :member %>
        </div>
      </div>
    <% end %>

    <!-- Warriors Section -->
    <% if @warriors.any? %>
      <div>
        <h2 class="text-2xl font-bold mb-4 text-gray-700">Guerreros</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <%= render partial: 'member_card', collection: @warriors, as: :member %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
