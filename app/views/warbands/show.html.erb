<div class="max-w-4xl mx-auto px-4 py-8">
  <%= link_to "‚Üê Volver a Mis Warbands", warbands_path,
      class: "text-blue-500 hover:text-blue-700 mb-4 inline-block" %>

  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold mb-6"><%= @warband.name %></h1>

    <div class="space-y-4">
      <div>
        <span class="font-semibold">Propietario:</span>
        <%= @warband.user.name %>
      </div>

      <div class="flex gap-6">
        <div>
          <span class="font-semibold">Oro:</span>
          <span class="inline-block bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded ml-2">
            üí∞ <%= @warband.gold %>
          </span>
        </div>
        <div>
          <span class="font-semibold">Influencia:</span>
          <span class="inline-block bg-purple-100 text-purple-800 text-sm px-3 py-1 rounded ml-2">
            ‚≠ê <%= @warband.influence %>
          </span>
        </div>
      </div>

      <div>
        <span class="font-semibold">Estado:</span>
        <% if @warband.in_campaign? %>
          <span class="inline-block bg-green-100 text-green-800 text-sm px-3 py-1 rounded ml-2">
            En Campa√±a
          </span>
        <% else %>
          <span class="inline-block bg-gray-100 text-gray-800 text-sm px-3 py-1 rounded ml-2">
            Disponible
          </span>
        <% end %>
      </div>

      <% if @warband.campaign.present? %>
        <div>
          <span class="font-semibold">Campa√±a Actual:</span>
          <%= link_to @warband.campaign.name, campaign_path(@warband.campaign),
              class: "text-blue-500 hover:underline ml-2" %>
        </div>
      <% end %>

      <div>
        <span class="font-semibold">Miembros:</span>
        <%= link_to "#{@warband.member_count} miembros (#{@warband.hero_count} h√©roes, #{@warband.warrior_count} guerreros)",
            warband_warband_members_path(@warband),
            class: "text-blue-500 hover:underline ml-2" %>
      </div>

      <div>
        <span class="font-semibold">Creada:</span>
        <%= l(@warband.created_at, format: :long) %>
      </div>
    </div>

    <% if @active_matchups.any? %>
      <div class="mt-8 pt-6 border-t">
        <h2 class="text-xl font-bold mb-4">Emparejamientos</h2>
        <div class="space-y-3">
          <% @active_matchups.each do |matchup| %>
            <% round = matchup.campaign_round %>
            <% campaign = round.campaign %>
            <% opponent = matchup.warband_1_id == @warband.id ? matchup.warband_2 : matchup.warband_1 %>
            <div class="bg-gray-50 rounded-lg p-4 flex items-center justify-between">
              <div>
                <p class="font-semibold text-gray-900">
                  vs <%= opponent.name %>
                  <span class="text-sm font-normal text-gray-500">(<%= opponent.user.name %>)</span>
                </p>
                <p class="text-sm text-gray-500">
                  <%= campaign.name %> &mdash; <%= round.display_name %>
                </p>
              </div>
              <div class="flex items-center gap-3">
                <% existing_roster = matchup.battle_rosters.find { |br| br.warband_id == @warband.id } %>
                <% if existing_roster %>
                  <%= link_to campaign_campaign_round_matchup_battle_roster_path(campaign, round, matchup, existing_roster),
                      class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Ver Batalla (<%= existing_roster.alive_count %>/<%= existing_roster.total_count %>)
                  <% end %>
                <% elsif @warband.user == current_user %>
                  <%= button_to campaign_campaign_round_matchup_battle_rosters_path(campaign, round, matchup),
                      method: :post,
                      class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    Modo Batalla
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @warband.campaign.present? && campaign_owner?(@warband.campaign) && @warband.user != current_user %>
      <div class="mt-6 mb-4 p-3 bg-purple-50 border border-purple-200 rounded">
        <p class="text-purple-800 text-sm font-medium">
          Est√°s gestionando esta warband como propietario de la campa√±a <%= @warband.campaign.name %>
        </p>
      </div>
    <% end %>

    <% if can_manage_warband?(@warband) %>
      <div class="flex gap-4 mt-8 pt-6 border-t">
        <%= link_to "Editar", edit_warband_path(@warband),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

        <% if @warband.in_campaign? %>
          <%= button_to "Remover de Campa√±a", remove_from_campaign_warband_path(@warband),
              method: :patch,
              class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>

        <% if @warband.user == current_user %>
          <%= button_to "Eliminar", warband_path(@warband),
              method: :delete,
              data: { turbo_confirm: "¬øEst√°s seguro de eliminar esta warband?" },
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
