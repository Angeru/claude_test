<div class="max-w-4xl mx-auto px-4 py-8">
  <%= link_to "‚Üê Volver a Mis Warbands", warbands_path,
      class: "text-blue-500 hover:text-blue-700 mb-4 inline-block" %>

  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold mb-6"><%= @warband.name %></h1>

    <div class="space-y-4">
      <div>
        <span class="font-semibold">Propietario:</span>
        <%= @warband.user.name %>
      </div>

      <div class="flex gap-6">
        <div>
          <span class="font-semibold">Oro:</span>
          <span class="inline-block bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded ml-2">
            üí∞ <%= @warband.gold %>
          </span>
        </div>
        <div>
          <span class="font-semibold">Influencia:</span>
          <span class="inline-block bg-purple-100 text-purple-800 text-sm px-3 py-1 rounded ml-2">
            ‚≠ê <%= @warband.influence %>
          </span>
        </div>
      </div>

      <div>
        <span class="font-semibold">Estado:</span>
        <% if @warband.in_campaign? %>
          <span class="inline-block bg-green-100 text-green-800 text-sm px-3 py-1 rounded ml-2">
            En Campa√±a
          </span>
        <% else %>
          <span class="inline-block bg-gray-100 text-gray-800 text-sm px-3 py-1 rounded ml-2">
            Disponible
          </span>
        <% end %>
      </div>

      <% if @warband.campaign.present? %>
        <div>
          <span class="font-semibold">Campa√±a Actual:</span>
          <%= link_to @warband.campaign.name, campaign_path(@warband.campaign),
              class: "text-blue-500 hover:underline ml-2" %>
        </div>
      <% end %>

      <div>
        <span class="font-semibold">Miembros:</span>
        <%= link_to "#{@warband.member_count} miembros (#{@warband.hero_count} h√©roes, #{@warband.warrior_count} guerreros)",
            warband_warband_members_path(@warband),
            class: "text-blue-500 hover:underline ml-2" %>
      </div>

      <div>
        <span class="font-semibold">Creada:</span>
        <%= l(@warband.created_at, format: :long) %>
      </div>
    </div>

    <% if @warband.campaign.present? && campaign_owner?(@warband.campaign) && @warband.user != current_user %>
      <div class="mt-6 mb-4 p-3 bg-purple-50 border border-purple-200 rounded">
        <p class="text-purple-800 text-sm font-medium">
          Est√°s gestionando esta warband como propietario de la campa√±a <%= @warband.campaign.name %>
        </p>
      </div>
    <% end %>

    <% if can_manage_warband?(@warband) %>
      <div class="flex gap-4 mt-8 pt-6 border-t">
        <%= link_to "Editar", edit_warband_path(@warband),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

        <% if @warband.in_campaign? %>
          <%= button_to "Remover de Campa√±a", remove_from_campaign_warband_path(@warband),
              method: :patch,
              class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>

        <% if @warband.user == current_user %>
          <%= button_to "Eliminar", warband_path(@warband),
              method: :delete,
              data: { turbo_confirm: "¬øEst√°s seguro de eliminar esta warband?" },
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
