<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Detalles del Usuario</h1>
      <div class="flex gap-2">
        <%= link_to "Editar", edit_admin_user_path(@user), class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <%= link_to "Volver", admin_users_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-6 space-y-4">
      <div>
        <span class="font-medium text-gray-700">ID:</span>
        <span class="text-gray-900 ml-2"><%= @user.id %></span>
      </div>

      <div>
        <span class="font-medium text-gray-700">Nombre:</span>
        <span class="text-gray-900 ml-2"><%= @user.name %></span>
      </div>

      <div>
        <span class="font-medium text-gray-700">Email:</span>
        <span class="text-gray-900 ml-2"><%= @user.email %></span>
      </div>

      <div>
        <span class="font-medium text-gray-700">Rol:</span>
        <% if @user.admin? %>
          <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">Admin</span>
        <% else %>
          <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Usuario</span>
        <% end %>
      </div>

      <div>
        <span class="font-medium text-gray-700">Creado:</span>
        <span class="text-gray-900 ml-2"><%= l(@user.created_at, format: :long) %></span>
      </div>

      <div>
        <span class="font-medium text-gray-700">Actualizado:</span>
        <span class="text-gray-900 ml-2"><%= l(@user.updated_at, format: :long) %></span>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200">
      <h2 class="text-lg font-semibold text-gray-800 mb-4">Campañas</h2>

      <% if @user.created_campaigns.any? %>
        <div class="mb-6">
          <h3 class="text-md font-medium text-gray-700 mb-2">Campañas Creadas (<%= @user.created_campaigns.count %>):</h3>
          <ul class="list-disc list-inside space-y-1 text-sm text-gray-600">
            <% @user.created_campaigns.limit(5).each do |campaign| %>
              <li><%= link_to campaign.name, admin_campaign_path(campaign), class: "text-blue-600 hover:text-blue-900" %> -
                <span class="text-xs <%= campaign.active? ? 'text-green-600' : campaign.paused? ? 'text-yellow-600' : 'text-gray-600' %>">
                  <%= campaign.status.capitalize %>
                </span>
              </li>
            <% end %>
          </ul>
          <% if @user.created_campaigns.count > 5 %>
            <p class="text-xs text-gray-500 mt-2">... y <%= @user.created_campaigns.count - 5 %> más</p>
          <% end %>
        </div>
      <% end %>

      <% if @user.campaigns.any? %>
        <div class="mb-6">
          <h3 class="text-md font-medium text-gray-700 mb-2">Campañas Suscritas (<%= @user.campaigns.count %>):</h3>
          <ul class="list-disc list-inside space-y-1 text-sm text-gray-600">
            <% @user.campaigns.limit(5).each do |campaign| %>
              <li><%= link_to campaign.name, admin_campaign_path(campaign), class: "text-blue-600 hover:text-blue-900" %> -
                <span class="text-xs <%= campaign.active? ? 'text-green-600' : campaign.paused? ? 'text-yellow-600' : 'text-gray-600' %>">
                  <%= campaign.status.capitalize %>
                </span>
              </li>
            <% end %>
          </ul>
          <% if @user.campaigns.count > 5 %>
            <p class="text-xs text-gray-500 mt-2">... y <%= @user.campaigns.count - 5 %> más</p>
          <% end %>
        </div>
      <% end %>

      <% if @user.created_campaigns.empty? && @user.campaigns.empty? %>
        <p class="text-sm text-gray-500">Este usuario no ha creado campañas ni está suscrito a ninguna.</p>
      <% end %>
    </div>

    <% unless @user == current_user %>
      <div class="mt-6 pt-6 border-t border-gray-200">
        <%= button_to "Eliminar Usuario", admin_user_path(@user), method: :delete, data: { turbo_confirm: "¿Estás seguro de eliminar a #{@user.name}? Esta acción no se puede deshacer." }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
