<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Detalles de la Campaña</h1>
      <div class="flex gap-2">
        <%= link_to "Editar", edit_admin_campaign_path(@campaign), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "Gestionar Suscripciones", manage_subscriptions_admin_campaign_path(@campaign), class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        <%= button_to "Eliminar", admin_campaign_path(@campaign), method: :delete, data: { turbo_confirm: "¿Estás seguro de eliminar esta campaña? Esta acción no se puede deshacer." }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500 cursor-pointer" %>
        <%= link_to "Volver", admin_campaigns_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>

    <div class="space-y-4">
      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Información General</h2>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-600 font-medium">ID:</p>
            <p class="text-gray-900"><%= @campaign.id %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600 font-medium">Estado:</p>
            <p>
              <% if @campaign.active? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Activa</span>
              <% elsif @campaign.paused? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pausada</span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Finalizada</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Detalles</h2>
        <div class="space-y-3">
          <div>
            <p class="text-sm text-gray-600 font-medium">Nombre:</p>
            <p class="text-gray-900"><%= @campaign.name %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600 font-medium">Descripción:</p>
            <p class="text-gray-900"><%= @campaign.description %></p>
          </div>
        </div>
      </div>

      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Creador</h2>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-600 font-medium">Nombre:</p>
            <p class="text-gray-900"><%= @campaign.user.name %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600 font-medium">Email:</p>
            <p class="text-gray-900"><%= @campaign.user.email %></p>
          </div>
        </div>
      </div>

      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Fechas</h2>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-gray-600 font-medium">Fecha de Inicio:</p>
            <p class="text-gray-900"><%= @campaign.start_date ? l(@campaign.start_date, format: :long) : "No establecida" %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600 font-medium">Fecha de Fin:</p>
            <p class="text-gray-900"><%= @campaign.end_date ? l(@campaign.end_date, format: :long) : "No establecida" %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600 font-medium">Creada:</p>
            <p class="text-gray-900"><%= l(@campaign.created_at, format: :long) %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600 font-medium">Actualizada:</p>
            <p class="text-gray-900"><%= l(@campaign.updated_at, format: :long) %></p>
          </div>
        </div>
      </div>

      <div class="pb-4">
        <div class="flex justify-between items-center mb-3">
          <h2 class="text-lg font-semibold text-gray-700">Suscriptores (<%= @subscribers.count %>)</h2>
          <%= link_to "Gestionar", manage_subscriptions_admin_campaign_path(@campaign), class: "text-purple-600 hover:text-purple-900 text-sm font-medium" %>
        </div>
        <% if @subscribers.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Suscrito desde</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @subscribers.each do |subscriber| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= subscriber.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= subscriber.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= l(subscriber.created_at, format: :short) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">No hay suscriptores en esta campaña.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
