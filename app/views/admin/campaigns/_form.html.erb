<%= form_with model: [:admin, campaign], class: "space-y-4" do |form| %>
  <% if campaign.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h3 class="font-bold"><%= pluralize(campaign.errors.count, "error") %> impidieron guardar:</h3>
      <ul class="list-disc list-inside mt-2">
        <% campaign.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
  </div>

  <div>
    <%= form.label :description, "Descripción", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :description, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
  </div>

  <div>
    <%= form.label :status, "Estado", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :status, Campaign::STATUSES.map { |s| [s.capitalize, s] }, {}, class: "shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :user_id, "Creador/Administrador", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.collection_select :user_id, User.order(:name), :id, :name, { include_blank: "Seleccionar creador" }, class: "shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <p class="text-xs text-gray-500 mt-1">Si no seleccionas un creador, se asignará automáticamente al usuario actual</p>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :start_date, "Fecha de Inicio", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :start_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :end_date, "Fecha de Fin", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :end_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="flex items-center justify-between pt-4">
    <%= form.submit campaign.new_record? ? "Crear Campaña" : "Actualizar Campaña", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
    <%= link_to "Cancelar", admin_campaigns_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>
<% end %>
