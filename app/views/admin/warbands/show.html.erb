<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Detalle de Warband</h1>
      <div class="flex gap-4">
        <%= link_to "Editar", edit_admin_warband_path(@warband), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "Volver", admin_warbands_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>

    <div class="space-y-6">
      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Información General</h2>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">ID</label>
            <p class="text-gray-900"><%= @warband.id %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">Nombre</label>
            <p class="text-gray-900 font-semibold"><%= @warband.name %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">Usuario</label>
            <p class="text-gray-900">
              <%= link_to @warband.user.name, admin_user_path(@warband.user), class: "text-blue-600 hover:text-blue-900" %>
              <span class="text-gray-500 text-sm">(<%= @warband.user.email %>)</span>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">Estado</label>
            <% if @warband.available? %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800">Disponible</span>
            <% else %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">En campaña</span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Asignación de Campaña</h2>

        <% if @warband.campaign.present? %>
          <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
            <div class="flex justify-between items-start">
              <div>
                <p class="text-sm font-medium text-gray-600 mb-1">Campaña Actual</p>
                <p class="text-lg font-semibold text-gray-900">
                  <%= link_to @warband.campaign.name, admin_campaign_path(@warband.campaign), class: "text-blue-600 hover:text-blue-900" %>
                </p>
                <% if @warband.campaign.description.present? %>
                  <p class="text-sm text-gray-600 mt-2"><%= @warband.campaign.description %></p>
                <% end %>
                <p class="text-xs text-gray-500 mt-2">
                  Estado:
                  <% if @warband.campaign.active? %>
                    <span class="text-green-600 font-medium">Activa</span>
                  <% elsif @warband.campaign.paused? %>
                    <span class="text-yellow-600 font-medium">Pausada</span>
                  <% else %>
                    <span class="text-gray-600 font-medium">Finalizada</span>
                  <% end %>
                </p>
              </div>
              <div>
                <%= button_to "Remover de campaña",
                              remove_from_campaign_admin_warband_path(@warband),
                              method: :patch,
                              data: { turbo_confirm: "¿Estás seguro de remover esta warband de la campaña?" },
                              class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-orange-500" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <p class="text-gray-600">Esta warband no está asignada a ninguna campaña actualmente.</p>
            <p class="text-sm text-gray-500 mt-2">Usa el botón "Editar" para asignarla a una campaña.</p>
          </div>
        <% end %>
      </div>

      <div>
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Información Adicional</h2>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">Fecha de Creación</label>
            <p class="text-gray-900"><%= l(@warband.created_at, format: :long) %></p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-600 mb-1">Última Actualización</label>
            <p class="text-gray-900"><%= l(@warband.updated_at, format: :long) %></p>
          </div>
        </div>
      </div>

      <div class="pt-4 border-t border-gray-200">
        <%= button_to "Eliminar Warband",
                      admin_warband_path(@warband),
                      method: :delete,
                      data: { turbo_confirm: "¿Estás seguro de eliminar la warband #{@warband.name}? Esta acción no se puede deshacer." },
                      class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500" %>
      </div>
    </div>
  </div>
</div>
