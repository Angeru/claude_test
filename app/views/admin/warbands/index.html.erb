<div class="max-w-7xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Gestión de Warbands</h1>
      <div class="flex gap-4">
        <%= link_to "Nueva Warband", new_admin_warband_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-green-500" %>
        <%= link_to "Gestión de Usuarios", admin_users_path, class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        <%= link_to "Gestión de Campañas", admin_campaigns_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "Volver al Dashboard", dashboard_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>

    <div class="mb-4 flex gap-2">
      <span class="text-sm text-gray-600">Filtros rápidos:</span>
      <%= link_to "Todas (#{@warbands.count})", admin_warbands_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
      <span class="text-gray-400">|</span>
      <%= link_to "Disponibles (#{Warband.available.count})", admin_warbands_path(filter: 'available'), class: "text-sm text-green-600 hover:text-green-800" %>
      <span class="text-gray-400">|</span>
      <%= link_to "En campaña (#{Warband.in_campaign.count})", admin_warbands_path(filter: 'in_campaign'), class: "text-sm text-purple-600 hover:text-purple-800" %>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Campaña</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Creado</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @warbands.each do |warband| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= warband.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= warband.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= warband.user.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if warband.campaign.present? %>
                  <%= link_to warband.campaign.name, admin_campaign_path(warband.campaign), class: "text-blue-600 hover:text-blue-900" %>
                <% else %>
                  <span class="text-gray-400">Sin asignar</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if warband.available? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Disponible</span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">En campaña</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= l(warband.created_at, format: :short) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "Ver", admin_warband_path(warband), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to "Editar", edit_admin_warband_path(warband), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= button_to "Eliminar", admin_warband_path(warband), method: :delete, data: { turbo_confirm: "¿Estás seguro de eliminar la warband #{warband.name}?" }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-4 text-gray-600 text-sm">
      Total: <%= @warbands.count %> warbands
    </div>
  </div>
</div>
