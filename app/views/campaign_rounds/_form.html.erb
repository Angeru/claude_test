<%= form_with(model: [@campaign, @round], local: true, class: "space-y-6") do |f| %>
  <% if @round.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@round.errors.count, "error") %> impidieron guardar esta ronda:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @round.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="space-y-6">
      <div>
        <%= f.label :round_number, "NÃºmero de Ronda", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :round_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", min: 1 %>
      </div>

      <div>
        <%= f.label :scenario, "Escenario (opcional)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :scenario, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ej: La Batalla del Bosque Oscuro" %>
      </div>

      <div>
        <%= f.label :played_at, "Fecha (opcional)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :played_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", campaign_campaign_rounds_path(@campaign), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit "Guardar Ronda", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
