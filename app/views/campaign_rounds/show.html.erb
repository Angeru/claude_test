<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "← Volver a rondas", campaign_campaign_rounds_path(@campaign), class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white shadow sm:rounded-lg mb-8">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @round.display_name %></h1>
          <% if @round.scenario.present? %>
            <p class="text-lg text-gray-600 mt-2">Escenario: <%= @round.scenario %></p>
          <% end %>
          <% if @round.played_at.present? %>
            <p class="text-sm text-gray-500 mt-1">Fecha: <%= l(@round.played_at, format: :long) %></p>
          <% end %>
        </div>
        <% if can_manage_campaign?(@campaign) %>
          <div class="flex space-x-3">
            <%= link_to "Editar Ronda", edit_campaign_campaign_round_path(@campaign, @round), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            <%= button_to "Eliminar Ronda", campaign_campaign_round_path(@campaign, @round), method: :delete, data: { turbo_confirm: "¿Estás seguro? Se eliminarán todos los emparejamientos." }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-900">Emparejamientos</h2>
    <% if can_manage_campaign?(@campaign) %>
      <%= link_to "Nuevo Emparejamiento", new_campaign_campaign_round_matchup_path(@campaign,@round), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" %>
    <% end %>
  </div>

  <% if @matchups.any? %>
    <div class="space-y-4">
      <% @matchups.each do |matchup| %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div class="flex-1 grid grid-cols-3 gap-4 items-center">
                <!-- Warband 1 -->
                <div class="text-right">
                  <p class="text-lg font-semibold text-gray-900"><%= matchup.warband_1.name %></p>
                  <p class="text-sm text-gray-500"><%= matchup.warband_1.user.name %></p>
                  <% if matchup.completed? %>
                    <div class="mt-2 space-y-1">
                      <p class="text-sm"><span class="font-medium">Puntos:</span> <%= matchup.warband_1_score %></p>
                      <p class="text-sm"><span class="font-medium">Bajas:</span> <%= matchup.warband_1_casualties %></p>
                      <div class="flex justify-end gap-2">
                        <% if matchup.warband_1_primary_objective %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Obj. 1°</span>
                        <% end %>
                        <% if matchup.warband_1_secondary_objective %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Obj. 2°</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>

                <!-- VS -->
                <div class="text-center">
                  <p class="text-2xl font-bold text-gray-400">VS</p>
                  <% if matchup.completed? %>
                    <p class="mt-2 px-3 py-1 rounded-full text-sm font-semibold <%= matchup.draw? ? 'bg-gray-100 text-gray-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= matchup.winner_name %>
                    </p>
                  <% else %>
                    <p class="mt-2 px-3 py-1 rounded-full text-sm font-semibold bg-orange-100 text-orange-800">
                      Pendiente
                    </p>
                  <% end %>
                </div>

                <!-- Warband 2 -->
                <div class="text-left">
                  <p class="text-lg font-semibold text-gray-900"><%= matchup.warband_2.name %></p>
                  <p class="text-sm text-gray-500"><%= matchup.warband_2.user.name %></p>
                  <% if matchup.completed? %>
                    <div class="mt-2 space-y-1">
                      <p class="text-sm"><span class="font-medium">Puntos:</span> <%= matchup.warband_2_score %></p>
                      <p class="text-sm"><span class="font-medium">Bajas:</span> <%= matchup.warband_2_casualties %></p>
                      <div class="flex gap-2">
                        <% if matchup.warband_2_primary_objective %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Obj. 1°</span>
                        <% end %>
                        <% if matchup.warband_2_secondary_objective %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Obj. 2°</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Actions -->
              <% if can_manage_campaign?(@campaign) %>
                <div class="ml-6 flex-shrink-0 flex space-x-2">
                  <%= link_to "Editar", edit_campaign_campaign_round_matchup_path(@round, matchup), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                  <%= button_to "Eliminar", campaign_campaign_round_matchup_path(@round, matchup), method: :delete, data: { turbo_confirm: "¿Estás seguro?" }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
                </div>
              <% end %>
            </div>

            <% if matchup.notes.present? %>
              <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-700"><span class="font-medium">Notas:</span> <%= matchup.notes %></p>
              </div>
            <% end %>

            <%# Battle Mode Button - show for participants %>
            <% if logged_in? %>
              <% user_warband = current_user.warbands.find { |w| [matchup.warband_1_id, matchup.warband_2_id].include?(w.id) } %>
              <% if user_warband %>
                <div class="mt-4 pt-4 border-t border-gray-200">
                  <% existing_roster = matchup.battle_rosters.find { |br| br.warband_id == user_warband.id } %>
                  <% if existing_roster %>
                    <%= link_to campaign_campaign_round_matchup_battle_roster_path(@campaign, @round, matchup, existing_roster),
                        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      Ver Batalla (<%= existing_roster.alive_count %> en pie / <%= existing_roster.total_count %>)
                    <% end %>
                  <% else %>
                    <%= button_to campaign_campaign_round_matchup_battle_rosters_path(@campaign, @round, matchup),
                        method: :post,
                        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      Modo Batalla
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Sin emparejamientos</h3>
      <p class="mt-1 text-sm text-gray-500">Crea los emparejamientos para esta ronda.</p>
      <% if can_manage_campaign?(@campaign) %>
        <div class="mt-6">
          <%= link_to "Crear Emparejamiento", new_campaign_campaign_round_matchup_path(@campaign,@round), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
