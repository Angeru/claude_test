<% content_for(:body_class) { "bg-stone-950" } %>
<% content_for(:raw_content) { true } %>

<%= render layout: "shared/dark_layout" do %>
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-10 gap-4">
    <div>
      <div class="flex items-center gap-4 mb-3">
        <div class="h-px w-12 bg-gradient-to-r from-transparent to-amber-700/60"></div>
        <svg viewBox="0 0 24 24" class="w-5 h-5 text-amber-600/60" fill="currentColor">
          <polygon points="12,2 15,9 22,9 16,14 18,21 12,17 6,21 8,14 2,9 9,9"/>
        </svg>
        <div class="h-px w-12 bg-gradient-to-l from-transparent to-amber-700/60"></div>
      </div>
      <h1 class="text-amber-100 tracking-[0.1em] uppercase" style="font-family: 'Cinzel', serif; font-size: 1.8rem; font-weight: 700;">
        <%= @round.display_name %>
      </h1>
      <% if @round.scenario.present? %>
        <p class="text-stone-400 mt-2" style="font-family: 'Crimson Text', serif; font-size: 1.1rem;">
          Escenario: <%= @round.scenario %>
        </p>
      <% end %>
      <% if @round.played_at.present? %>
        <p class="text-stone-500 mt-1" style="font-family: 'Crimson Text', serif;">
          Fecha: <%= l(@round.played_at, format: :long) %>
        </p>
      <% end %>
    </div>
    <div class="flex flex-wrap gap-3">
      <% if can_manage_campaign?(@campaign) %>
        <%= link_to edit_campaign_campaign_round_path(@campaign, @round), class: "px-4 py-2 border border-amber-800/50 text-amber-400 rounded hover:bg-amber-900/20 hover:border-amber-700/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
          Editar Ronda
        <% end %>
        <%= button_to "Eliminar Ronda", campaign_campaign_round_path(@campaign, @round),
            method: :delete,
            data: { turbo_confirm: "¿Estas seguro? Se eliminaran todos los emparejamientos." },
            class: "px-4 py-2 border border-red-800/50 text-red-400 rounded hover:bg-red-900/20 hover:border-red-700/60 transition-all cursor-pointer",
            style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" %>
      <% end %>
      <%= link_to campaign_campaign_rounds_path(@campaign), class: "px-4 py-2 border border-stone-700/50 text-stone-400 rounded hover:bg-stone-800/50 hover:border-stone-600/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
        Volver a Rondas
      <% end %>
    </div>
  </div>

  <!-- Matchups Section -->
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center gap-4">
      <div class="h-px w-8 bg-gradient-to-r from-transparent to-amber-800/40"></div>
      <span class="text-amber-600/60 text-xs tracking-[0.4em] uppercase" style="font-family: 'Cinzel', serif;">Emparejamientos</span>
      <div class="h-px w-8 bg-gradient-to-l from-transparent to-amber-800/40"></div>
    </div>
    <% if can_manage_campaign?(@campaign) %>
      <%= link_to new_campaign_campaign_round_matchup_path(@campaign, @round), class: "px-4 py-2 bg-gradient-to-b from-emerald-700 to-emerald-900 text-emerald-100 rounded border border-emerald-600/50 hover:from-emerald-600 hover:to-emerald-800 transition-all shadow-lg shadow-emerald-900/30", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
        Nuevo Emparejamiento
      <% end %>
    <% end %>
  </div>

  <% if @matchups.any? %>
    <div class="space-y-5">
      <% @matchups.each do |matchup| %>
        <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 overflow-hidden">
          <div class="px-6 py-5">
            <div class="flex items-center justify-between">
              <div class="flex-1 grid grid-cols-3 gap-4 items-center">
                <!-- Warband 1 -->
                <div class="text-right">
                  <p class="text-amber-100 tracking-wider" style="font-family: 'Cinzel', serif; font-size: 0.95rem;"><%= matchup.warband_1.name %></p>
                  <p class="text-stone-500 text-sm" style="font-family: 'Crimson Text', serif;"><%= matchup.warband_1.user.name %></p>
                  <% if matchup.completed? %>
                    <div class="mt-2 space-y-1">
                      <p class="text-stone-300 text-sm" style="font-family: 'Crimson Text', serif;"><span class="text-amber-200/70">Puntos:</span> <%= matchup.warband_1_score %></p>
                      <p class="text-stone-300 text-sm" style="font-family: 'Crimson Text', serif;"><span class="text-amber-200/70">Bajas:</span> <%= matchup.warband_1_casualties %></p>
                      <div class="flex justify-end gap-2">
                        <% if matchup.warband_1_primary_objective %>
                          <span class="px-2 py-0.5 text-xs text-emerald-400/80 border border-emerald-900/40 rounded bg-emerald-900/20" style="font-family: 'Cinzel', serif; font-size: 0.55rem;">Obj. 1°</span>
                        <% end %>
                        <% if matchup.warband_1_secondary_objective %>
                          <span class="px-2 py-0.5 text-xs text-blue-400/80 border border-blue-900/40 rounded bg-blue-900/20" style="font-family: 'Cinzel', serif; font-size: 0.55rem;">Obj. 2°</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>

                <!-- VS -->
                <div class="text-center">
                  <p class="text-2xl font-bold text-amber-700/60" style="font-family: 'Cinzel Decorative', serif;">VS</p>
                  <% if matchup.completed? %>
                    <p class="mt-2 px-3 py-1 rounded text-xs inline-block <%= matchup.draw? ? 'text-stone-300 border border-stone-700/40 bg-stone-800/30' : 'text-amber-300 border border-amber-800/40 bg-amber-900/20' %>" style="font-family: 'Cinzel', serif; letter-spacing: 0.05em;">
                      <%= matchup.winner_name %>
                    </p>
                  <% else %>
                    <span class="mt-2 px-3 py-1 rounded text-xs inline-block text-orange-400/80 border border-orange-900/40 bg-orange-900/20" style="font-family: 'Cinzel', serif; letter-spacing: 0.05em;">
                      Pendiente
                    </span>
                  <% end %>
                </div>

                <!-- Warband 2 -->
                <div class="text-left">
                  <p class="text-amber-100 tracking-wider" style="font-family: 'Cinzel', serif; font-size: 0.95rem;"><%= matchup.warband_2.name %></p>
                  <p class="text-stone-500 text-sm" style="font-family: 'Crimson Text', serif;"><%= matchup.warband_2.user.name %></p>
                  <% if matchup.completed? %>
                    <div class="mt-2 space-y-1">
                      <p class="text-stone-300 text-sm" style="font-family: 'Crimson Text', serif;"><span class="text-amber-200/70">Puntos:</span> <%= matchup.warband_2_score %></p>
                      <p class="text-stone-300 text-sm" style="font-family: 'Crimson Text', serif;"><span class="text-amber-200/70">Bajas:</span> <%= matchup.warband_2_casualties %></p>
                      <div class="flex gap-2">
                        <% if matchup.warband_2_primary_objective %>
                          <span class="px-2 py-0.5 text-xs text-emerald-400/80 border border-emerald-900/40 rounded bg-emerald-900/20" style="font-family: 'Cinzel', serif; font-size: 0.55rem;">Obj. 1°</span>
                        <% end %>
                        <% if matchup.warband_2_secondary_objective %>
                          <span class="px-2 py-0.5 text-xs text-blue-400/80 border border-blue-900/40 rounded bg-blue-900/20" style="font-family: 'Cinzel', serif; font-size: 0.55rem;">Obj. 2°</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Actions -->
              <% if can_manage_campaign?(@campaign) %>
                <div class="ml-6 flex-shrink-0 flex space-x-3">
                  <%= link_to "Editar", edit_campaign_campaign_round_matchup_path(@round, matchup),
                      class: "text-amber-400 hover:text-amber-300 transition-colors tracking-wider uppercase",
                      style: "font-family: 'Cinzel', serif; font-size: 0.65rem;" %>
                  <%= button_to "Eliminar", campaign_campaign_round_matchup_path(@round, matchup),
                      method: :delete,
                      data: { turbo_confirm: "¿Estas seguro?" },
                      class: "text-red-500/70 hover:text-red-400 transition-colors tracking-wider uppercase bg-transparent border-0 p-0 cursor-pointer",
                      style: "font-family: 'Cinzel', serif; font-size: 0.65rem;" %>
                </div>
              <% end %>
            </div>

            <% if matchup.notes.present? %>
              <div class="mt-4 pt-4 border-t border-stone-800/50">
                <p class="text-stone-400 text-sm" style="font-family: 'Crimson Text', serif;">
                  <span class="text-amber-200/70">Notas:</span> <%= matchup.notes %>
                </p>
              </div>
            <% end %>

            <%# Battle Mode Button - show for participants %>
            <% if logged_in? %>
              <% user_warband = current_user.warbands.find { |w| [matchup.warband_1_id, matchup.warband_2_id].include?(w.id) } %>
              <% if user_warband %>
                <div class="mt-4 pt-4 border-t border-stone-800/50">
                  <% existing_roster = matchup.battle_rosters.find { |br| br.warband_id == user_warband.id } %>
                  <% if existing_roster %>
                    <%= link_to campaign_campaign_round_matchup_battle_roster_path(@campaign, @round, matchup, existing_roster),
                        class: "inline-flex items-center px-4 py-2 bg-gradient-to-b from-red-700 to-red-900 text-red-100 rounded border border-red-600/50 hover:from-red-600 hover:to-red-800 transition-all shadow-lg shadow-red-900/30",
                        style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      Ver Batalla (<%= existing_roster.alive_count %> en pie / <%= existing_roster.total_count %>)
                    <% end %>
                  <% else %>
                    <%= button_to campaign_campaign_round_matchup_battle_rosters_path(@campaign, @round, matchup),
                        method: :post,
                        class: "inline-flex items-center px-4 py-2 bg-gradient-to-b from-orange-700 to-orange-900 text-orange-100 rounded border border-orange-600/50 hover:from-orange-600 hover:to-orange-800 transition-all shadow-lg shadow-orange-900/30 cursor-pointer",
                        style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      Modo Batalla
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-5 rounded-full border border-amber-700/40 flex items-center justify-center bg-amber-900/20">
        <svg viewBox="0 0 24 24" class="w-8 h-8 text-amber-500/60" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <h3 class="text-amber-100/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.95rem;">
        Sin emparejamientos
      </h3>
      <p class="text-stone-400 mb-6" style="font-family: 'Crimson Text', serif; font-size: 1.05rem;">
        Crea los emparejamientos para esta ronda.
      </p>
      <% if can_manage_campaign?(@campaign) %>
        <%= link_to "Crear Emparejamiento", new_campaign_campaign_round_matchup_path(@campaign, @round),
            class: "px-5 py-2.5 bg-gradient-to-b from-emerald-700 to-emerald-900 text-emerald-100 rounded border border-emerald-600/50 hover:from-emerald-600 hover:to-emerald-800 transition-all shadow-lg shadow-emerald-900/30",
            style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" %>
      <% end %>
    </div>
  <% end %>
<% end %>
