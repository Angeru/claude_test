<%= form_with(model: [@campaign_round.campaign, @campaign_round, @matchup], local: true, class: "space-y-6") do |f| %>
  <% if @matchup.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@matchup.errors.count, "error") %> impidieron guardar este emparejamiento:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @matchup.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900 mb-6">Selecci√≥n de Warbands</h3>

    <div class="grid grid-cols-2 gap-6 mb-6">
      <div>
        <%= f.label :warband_1_id, "Warband 1", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :warband_1_id, @available_warbands, :id, :name,
            { prompt: "Selecciona una warband" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :warband_2_id, "Warband 2", class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :warband_2_id, @available_warbands, :id, :name,
            { prompt: "Selecciona una warband" },
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
      </div>
    </div>
  </div>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <h3 class="text-lg font-medium leading-6 text-gray-900 mb-6">Resultado del Combate</h3>

    <div class="grid grid-cols-2 gap-6">
      <!-- Warband 1 Results -->
      <div class="space-y-4">
        <h4 class="font-medium text-gray-900">Warband 1</h4>

        <div>
          <%= f.label :warband_1_score, "Puntos obtenidos", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :warband_1_score, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm", min: 0 %>
        </div>

        <div>
          <%= f.label :warband_1_casualties, "Bajas sufridas", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :warband_1_casualties, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm", min: 0 %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :warband_1_primary_objective, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= f.label :warband_1_primary_objective, "Objetivo Primario cumplido", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :warband_1_secondary_objective, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= f.label :warband_1_secondary_objective, "Objetivo Secundario cumplido", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      </div>

      <!-- Warband 2 Results -->
      <div class="space-y-4">
        <h4 class="font-medium text-gray-900">Warband 2</h4>

        <div>
          <%= f.label :warband_2_score, "Puntos obtenidos", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :warband_2_score, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm", min: 0 %>
        </div>

        <div>
          <%= f.label :warband_2_casualties, "Bajas sufridas", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :warband_2_casualties, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm", min: 0 %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :warband_2_primary_objective, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= f.label :warband_2_primary_objective, "Objetivo Primario cumplido", class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :warband_2_secondary_objective, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= f.label :warband_2_secondary_objective, "Objetivo Secundario cumplido", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      </div>
    </div>

    <div class="mt-6">
      <%= f.label :notes, "Notas adicionales (opcional)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm", placeholder: "Notas sobre el combate, eventos especiales, etc." %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", campaign_campaign_round_path(@campaign_round.campaign, @campaign_round), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit "Guardar Resultado", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
  </div>
<% end %>
