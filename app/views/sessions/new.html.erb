<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h1 class="text-2xl font-bold text-center mb-6 text-gray-800">Iniciar Sesión</h1>

    <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "email@ejemplo.com" %>
      </div>

      <div>
        <%= f.label :password, "Contraseña", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Tu contraseña" %>
      </div>

      <div>
        <%= f.submit "Iniciar Sesión", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-4 text-center space-y-2">
      <p class="text-gray-600 text-sm">
        <%= link_to "¿Olvidaste tu contraseña?", new_password_reset_path, class: "text-blue-500 hover:text-blue-700" %>
      </p>
      <p class="text-gray-600 text-sm">
        ¿No tienes una cuenta?
        <%= link_to "Regístrate", signup_path, class: "text-blue-500 hover:text-blue-700 font-semibold" %>
      </p>
    </div>
  </div>
</div>
