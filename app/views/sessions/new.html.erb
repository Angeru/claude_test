<div class="min-h-screen flex flex-col lg:flex-row">
  <!-- Left Sidebar -->
  <nav class="w-full lg:w-56 bg-black/30 py-6 lg:py-8 px-6 flex-shrink-0">
    <div class="mb-8 lg:mb-10">
      <div class="font-bold leading-tight">
        <span class="text-amber-500 text-xl lg:text-2xl italic block">Battle</span>
        <span class="text-amber-500 text-xl lg:text-2xl italic block">Companies</span>
        <span class="text-amber-500 text-xl lg:text-2xl italic block">Manager</span>
      </div>
    </div>
    <ul class="flex lg:flex-col gap-4 lg:gap-5">
      <li><%= link_to "Login / Register", login_path, class: "text-white hover:text-amber-400 font-medium text-sm" %></li>
      <li><a href="#" class="text-white hover:text-amber-400 font-medium text-sm">About</a></li>
      <li><a href="#" class="text-white hover:text-amber-400 font-medium text-sm">Contact</a></li>
    </ul>
  </nav>

  <!-- Main Content -->
  <div class="flex-1 py-6 lg:py-8 px-6 lg:px-10">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-2xl lg:text-3xl text-gray-300 font-light">Battle Companies Manager</h1>
      <h2 class="text-3xl lg:text-4xl font-bold text-amber-500">Login / Register</h2>
    </div>

    <p class="text-gray-300 text-sm mb-1">Battle Companies Manager is currently in beta and you may encounter some bugs.</p>
    <p class="text-gray-300 text-sm mb-8">Please visit the <a href="#" class="text-amber-500 hover:text-amber-400 underline">Battle Companies Manager Facebook page</a> for announcements and news.</p>

    <!-- Forms Container -->
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
      <!-- Register Form -->
      <div class="flex-1 auth-panel rounded-lg p-6 lg:p-8">
        <h3 class="text-2xl font-semibold text-white mb-6">Register</h3>

        <%= form_with model: (@user || User.new), url: users_path, class: "space-y-4" do |f| %>
          <% if @user&.errors&.any? %>
            <div class="bg-red-900/50 border border-red-500/50 text-red-200 px-4 py-3 rounded text-sm">
              <ul class="list-disc list-inside space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.text_field :name,
                class: "w-full py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Name" %>
          </div>

          <div>
            <%= f.email_field :email,
                class: "w-full py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Email" %>
          </div>

          <div>
            <%= email_field_tag "user[email_confirmation]", nil,
                class: "w-full py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Confirm Email" %>
          </div>

          <div>
            <%= f.password_field :password,
                class: "w-full py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Password" %>
          </div>

          <div class="flex items-center gap-3">
            <%= f.password_field :password_confirmation,
                class: "flex-1 py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Confirm Password" %>
            <button type="submit" class="auth-btn group inline-flex items-center gap-2 bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-6 rounded cursor-pointer transition-colors">
              Register <span class="text-lg transition-transform group-hover:translate-x-0.5">&rarr;</span>
            </button>
          </div>
        <% end %>
      </div>

      <!-- Login Form -->
      <div class="w-full lg:w-[400px] auth-panel rounded-lg p-6 lg:p-8 flex-shrink-0">
        <h3 class="text-2xl font-semibold text-white mb-6">Login</h3>

        <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
          <div>
            <%= f.email_field :email,
                class: "w-full py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Email address" %>
          </div>

          <div class="flex items-center gap-3">
            <%= f.password_field :password,
                class: "flex-1 py-3 px-4 rounded bg-white text-gray-800 placeholder-gray-400 border-0 focus:outline-none focus:ring-2 focus:ring-amber-500",
                placeholder: "Password" %>
            <button type="submit" class="auth-btn group inline-flex items-center gap-2 bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-6 rounded cursor-pointer transition-colors">
              Log in <span class="text-lg transition-transform group-hover:translate-x-0.5">&rarr;</span>
            </button>
          </div>
        <% end %>

        <p class="mt-4">
          <%= link_to "Forgot your password?", new_password_reset_path, class: "text-amber-500 hover:text-amber-400 text-sm" %>
        </p>
      </div>
    </div>
  </div>
</div>
