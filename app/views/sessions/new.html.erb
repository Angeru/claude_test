<% content_for(:body_class) { "bg-stone-950" } %>
<% content_for(:raw_content) { true } %>

<div class="relative min-h-screen overflow-hidden">
  <!-- Background layers -->
  <div class="absolute inset-0 bg-gradient-to-b from-stone-950 via-stone-900 to-stone-950"></div>
  <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22><rect width=%22100%22 height=%22100%22 fill=%22none%22/><path d=%22M0 50h100M50 0v100%22 stroke=%22%23a0845c%22 stroke-width=%220.5%22 opacity=%220.3%22/></svg>'); background-size: 100px 100px;"></div>

  <!-- Top decorative border -->
  <div class="relative z-10">
    <div class="h-1 bg-gradient-to-r from-transparent via-amber-700 to-transparent"></div>
    <div class="h-px bg-gradient-to-r from-transparent via-amber-500/50 to-transparent"></div>
  </div>

  <!-- Navigation -->
  <nav class="relative z-20 px-6 py-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div class="flex items-center gap-3">
        <%= link_to root_path, class: "flex items-center gap-3 no-underline" do %>
          <div class="w-10 h-10 rounded-full border-2 border-amber-700 flex items-center justify-center bg-stone-900/80">
            <svg viewBox="0 0 24 24" class="w-5 h-5 text-amber-500" fill="currentColor">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <span class="text-amber-500 text-sm tracking-[0.3em] uppercase" style="font-family: 'Cinzel', serif;">SBG Campaigns</span>
        <% end %>
      </div>
      <div class="flex items-center gap-4">
        <%= link_to "Registrarse", signup_path, class: "px-4 py-2 border border-amber-700/60 text-amber-400 hover:bg-amber-900/30 hover:border-amber-600 rounded transition-all text-sm tracking-wider uppercase", style: "font-family: 'Cinzel', serif; font-size: 0.7rem;" %>
      </div>
    </div>
  </nav>

  <!-- Login Form Section -->
  <section class="relative z-10 px-6 pt-12 pb-24 flex items-center justify-center">
    <div class="w-full max-w-md">
      <!-- Decorative element above title -->
      <div class="flex items-center justify-center gap-4 mb-8">
        <div class="h-px w-24 bg-gradient-to-r from-transparent to-amber-700/60"></div>
        <svg viewBox="0 0 24 24" class="w-6 h-6 text-amber-600/60" fill="currentColor">
          <polygon points="12,2 15,9 22,9 16,14 18,21 12,17 6,21 8,14 2,9 9,9"/>
        </svg>
        <div class="h-px w-24 bg-gradient-to-l from-transparent to-amber-700/60"></div>
      </div>

      <h1 class="text-center text-amber-100 mb-2 tracking-[0.15em] uppercase" style="font-family: 'Cinzel Decorative', serif; font-size: 1.8rem; font-weight: 700;">
        Iniciar Sesion
      </h1>
      <p class="text-center text-stone-400 mb-10" style="font-family: 'Crimson Text', serif; font-size: 1.1rem;">
        Entra a la Tierra Media y gestiona tus batallas
      </p>

      <!-- Form Card -->
      <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-8">
        <% if flash[:alert] %>
          <div class="mb-6 p-4 rounded border border-red-800/50 bg-red-900/20 text-red-400 text-sm" style="font-family: 'Crimson Text', serif;">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_with url: login_path, method: :post, class: "space-y-5" do |f| %>
          <div>
            <%= f.label :email, "Email", class: "block text-amber-200/80 text-xs tracking-wider uppercase mb-2", style: "font-family: 'Cinzel', serif; font-size: 0.7rem;" %>
            <%= f.email_field :email, class: "w-full px-4 py-3 rounded border border-amber-900/40 bg-stone-900/60 text-amber-100 placeholder-stone-500 focus:outline-none focus:border-amber-600/60 focus:ring-1 focus:ring-amber-600/30 transition-colors", style: "font-family: 'Crimson Text', serif;", placeholder: "email@ejemplo.com" %>
          </div>

          <div>
            <%= f.label :password, "Contrasena", class: "block text-amber-200/80 text-xs tracking-wider uppercase mb-2", style: "font-family: 'Cinzel', serif; font-size: 0.7rem;" %>
            <%= f.password_field :password, class: "w-full px-4 py-3 rounded border border-amber-900/40 bg-stone-900/60 text-amber-100 placeholder-stone-500 focus:outline-none focus:border-amber-600/60 focus:ring-1 focus:ring-amber-600/30 transition-colors", style: "font-family: 'Crimson Text', serif;", placeholder: "Tu contrasena" %>
          </div>

          <div class="pt-2">
            <%= f.submit "Entrar", class: "w-full py-3 bg-gradient-to-b from-amber-700 to-amber-900 text-amber-100 rounded border border-amber-600/50 hover:from-amber-600 hover:to-amber-800 transition-all shadow-lg shadow-amber-900/30 cursor-pointer tracking-[0.15em] uppercase", style: "font-family: 'Cinzel', serif; font-size: 0.85rem;" %>
          </div>
        <% end %>

        <div class="mt-6 pt-5 border-t border-stone-800/50 text-center space-y-3">
          <p>
            <%= link_to "¿Olvidaste tu contrasena?", new_password_reset_path, class: "text-amber-600/70 hover:text-amber-400 text-sm transition-colors", style: "font-family: 'Crimson Text', serif;" %>
          </p>
          <p class="text-stone-500 text-sm" style="font-family: 'Crimson Text', serif;">
            ¿No tienes una cuenta?
            <%= link_to "Registrate", signup_path, class: "text-amber-400 hover:text-amber-300 font-semibold transition-colors" %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="relative z-10 border-t border-amber-900/20 mt-auto">
    <div class="max-w-6xl mx-auto px-6 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-stone-600 text-sm" style="font-family: 'Crimson Text', serif;">
          Middle-earth SBG Campaign Manager
        </div>
        <div class="flex items-center gap-6">
          <%= link_to "Inicio", root_path, class: "text-stone-500 hover:text-amber-500 text-xs tracking-widest uppercase transition-colors", style: "font-family: 'Cinzel', serif;" %>
          <%= link_to "Registro", signup_path, class: "text-stone-500 hover:text-amber-500 text-xs tracking-widest uppercase transition-colors", style: "font-family: 'Cinzel', serif;" %>
        </div>
      </div>
    </div>
    <div class="h-px bg-gradient-to-r from-transparent via-amber-700 to-transparent"></div>
    <div class="h-1 bg-gradient-to-r from-transparent via-amber-900/50 to-transparent"></div>
  </footer>
</div>
