<%= form_with(model: [@warband_member.warband, @warband_member, @equipment], local: true, class: "space-y-6") do |f| %>
  <% if @equipment.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@equipment.errors.count, "error") %> impidieron guardar este equipo:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @equipment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-2 md:gap-6">
      <div class="space-y-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Información Básica</h3>

        <div>
          <%= f.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Ej: Espada Élfica" %>
        </div>

        <div>
          <%= f.label :equipment_type, "Tipo", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :equipment_type,
              options_for_select(WarbandEquipment::EQUIPMENT_TYPES.map { |t| [t.capitalize, t] }, @equipment.equipment_type),
              { include_blank: "Selecciona un tipo" },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :cost, "Coste (puntos)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :cost, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: 0 %>
        </div>

        <div>
          <%= f.label :description, "Descripción", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Descripción opcional del equipo..." %>
        </div>
      </div>

      <div class="space-y-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Modificadores de Atributos</h3>
        <p class="text-sm text-gray-500">Valores positivos aumentan el atributo, negativos lo reducen. Dejar en 0 si no aplica.</p>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :movimiento_modifier, "Movimiento", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :movimiento_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :lucha_modifier, "Lucha", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :lucha_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :proyectiles_modifier, "Proyectiles", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :proyectiles_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :fuerza_modifier, "Fuerza", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :fuerza_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :defensa_modifier, "Defensa", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :defensa_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :ataques_modifier, "Ataques", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :ataques_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :heridas_modifier, "Heridas", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :heridas_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :coraje_modifier, "Coraje", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :coraje_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :inteligencia_modifier, "Inteligencia", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :inteligencia_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :might_modifier, "Might", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :might_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :will_modifier, "Will", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :will_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>

          <div>
            <%= f.label :fate_modifier, "Fate", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :fate_modifier, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: -10, max: 10 %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", warband_warband_member_warband_equipments_path(@warband_member.warband, @warband_member), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <%= f.submit "Guardar Equipo", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
