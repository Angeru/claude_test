<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h1 class="text-2xl font-bold text-center mb-6 text-gray-800">Nueva Contraseña</h1>

    <%= form_with model: @user, url: password_reset_path(params[:id]), method: :patch, class: "space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :password, "Nueva Contraseña", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Mínimo 6 caracteres" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirmar Nueva Contraseña", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Confirma tu nueva contraseña" %>
      </div>

      <div>
        <%= f.submit "Actualizar Contraseña", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
