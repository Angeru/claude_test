<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h1 class="text-2xl font-bold text-center mb-6 text-gray-800">Restablecer Contraseña</h1>
    <p class="text-gray-600 text-center mb-6">Ingresa tu email y te enviaremos instrucciones para restablecer tu contraseña.</p>

    <%= form_with url: password_resets_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "email@ejemplo.com" %>
      </div>

      <div>
        <%= f.submit "Enviar Instrucciones", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>

    <p class="text-center text-gray-600 text-sm mt-4">
      ¿Recordaste tu contraseña?
      <%= link_to "Iniciar sesión", login_path, class: "text-blue-500 hover:text-blue-700 font-semibold" %>
    </p>
  </div>
</div>
