<%= form_with model: campaign, class: "space-y-4" do |form| %>
  <% if campaign.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h3 class="font-bold"><%= pluralize(campaign.errors.count, "error") %> impidieron guardar:</h3>
      <ul class="list-disc list-inside mt-2">
        <% campaign.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre de la Campaña", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Ej: Campaña de Verano 2026", required: true %>
    <p class="text-xs text-gray-500 mt-1">Mínimo 3 caracteres</p>
  </div>

  <div>
    <%= form.label :description, "Descripción", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :description, rows: 6, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Describe tu campaña, sus objetivos, reglas especiales, etc.", required: true %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :start_date, "Fecha de Inicio (Opcional)", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :start_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :end_date, "Fecha de Fin (Opcional)", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :end_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded p-4">
    <p class="text-sm text-blue-800">
      <strong>Nota:</strong> Tu campaña se creará en estado "Activa" y serás automáticamente suscrito a ella.
      Serás el administrador de esta campaña.
    </p>
  </div>

  <div class="flex items-center justify-between pt-4">
    <%= form.submit "Crear Campaña", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 cursor-pointer" %>
    <%= link_to "Cancelar", campaigns_path, class: "text-gray-600 hover:text-gray-800" %>
  </div>
<% end %>
