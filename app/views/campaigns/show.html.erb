<% content_for(:body_class) { "bg-stone-950" } %>
<% content_for(:raw_content) { true } %>

<%= render layout: "shared/dark_layout", locals: { max_width: "max-w-4xl" } do %>
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-10 gap-4">
    <div>
      <div class="flex items-center gap-4 mb-3">
        <div class="h-px w-12 bg-gradient-to-r from-transparent to-amber-700/60"></div>
        <svg viewBox="0 0 24 24" class="w-5 h-5 text-amber-600/60" fill="currentColor">
          <polygon points="12,2 15,9 22,9 16,14 18,21 12,17 6,21 8,14 2,9 9,9"/>
        </svg>
        <div class="h-px w-12 bg-gradient-to-l from-transparent to-amber-700/60"></div>
      </div>
      <h1 class="text-amber-100 tracking-[0.1em] uppercase" style="font-family: 'Cinzel', serif; font-size: 1.8rem; font-weight: 700;">
        <%= @campaign.name %>
      </h1>
    </div>
    <div class="flex flex-wrap gap-3">
      <% if campaign_owner?(@campaign) %>
        <%= link_to new_campaign_campaign_round_path(@campaign), class: "px-4 py-2 bg-gradient-to-b from-amber-700 to-amber-900 text-amber-100 rounded border border-amber-600/50 hover:from-amber-600 hover:to-amber-800 transition-all shadow-lg shadow-amber-900/30", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
          Nueva Ronda
        <% end %>
        <%= link_to campaign_campaign_rounds_path(@campaign), class: "px-4 py-2 border border-amber-800/50 text-amber-400 rounded hover:bg-amber-900/20 hover:border-amber-700/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
          Gestionar Rondas
        <% end %>
        <%= link_to manage_warbands_campaign_path(@campaign), class: "px-4 py-2 border border-purple-800/50 text-purple-400 rounded hover:bg-purple-900/20 hover:border-purple-700/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
          Gestionar Warbands
        <% end %>
      <% end %>
      <% if @is_subscribed %>
        <%= button_to "Desuscribirse", unsubscribe_campaign_path(@campaign),
            method: :delete,
            class: "px-4 py-2 border border-red-800/50 text-red-400 rounded hover:bg-red-900/20 hover:border-red-700/60 transition-all cursor-pointer",
            style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;",
            data: { turbo_confirm: "Â¿Estas seguro de desuscribirte de esta campana?" } %>
      <% end %>
      <%= link_to campaigns_path, class: "px-4 py-2 border border-stone-700/50 text-stone-400 rounded hover:bg-stone-800/50 hover:border-stone-600/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" do %>
        Volver
      <% end %>
    </div>
  </div>

  <% if @is_subscribed %>
    <div class="mb-6 p-4 rounded border border-purple-800/40 bg-purple-900/20">
      <p class="text-purple-300 text-sm" style="font-family: 'Crimson Text', serif;">Estas suscrito a esta campana</p>
    </div>
  <% end %>

  <!-- Campaign Details Card -->
  <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-8 mb-8">
    <div class="space-y-6">
      <!-- Description -->
      <div class="border-b border-stone-800/50 pb-5">
        <h2 class="text-amber-200/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.8rem;">Descripcion</h2>
        <p class="text-stone-300 whitespace-pre-wrap leading-relaxed" style="font-family: 'Crimson Text', serif; font-size: 1.05rem;"><%= @campaign.description %></p>
      </div>

      <!-- Status -->
      <div class="border-b border-stone-800/50 pb-5">
        <h2 class="text-amber-200/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.8rem;">Estado</h2>
        <% if @campaign.active? %>
          <span class="px-3 py-1 text-xs text-emerald-400/80 border border-emerald-900/40 rounded bg-emerald-900/20" style="font-family: 'Cinzel', serif; font-size: 0.65rem; letter-spacing: 0.1em;">Activa</span>
        <% elsif @campaign.paused? %>
          <span class="px-3 py-1 text-xs text-yellow-400/80 border border-yellow-900/40 rounded bg-yellow-900/20" style="font-family: 'Cinzel', serif; font-size: 0.65rem; letter-spacing: 0.1em;">Pausada</span>
        <% else %>
          <span class="px-3 py-1 text-xs text-stone-400/80 border border-stone-700/40 rounded bg-stone-800/30" style="font-family: 'Cinzel', serif; font-size: 0.65rem; letter-spacing: 0.1em;">Finalizada</span>
        <% end %>
      </div>

      <!-- Admin -->
      <div class="border-b border-stone-800/50 pb-5">
        <h2 class="text-amber-200/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.8rem;">Administrador</h2>
        <div class="flex items-center text-stone-300">
          <svg class="w-5 h-5 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span style="font-family: 'Crimson Text', serif; font-size: 1.05rem;"><%= @campaign.user.name %></span>
        </div>
      </div>

      <!-- Period -->
      <% if @campaign.start_date || @campaign.end_date %>
        <div class="border-b border-stone-800/50 pb-5">
          <h2 class="text-amber-200/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.8rem;">Periodo</h2>
          <div class="space-y-2">
            <% if @campaign.start_date %>
              <div class="flex items-center text-stone-300">
                <svg class="w-5 h-5 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span style="font-family: 'Crimson Text', serif;"><strong class="text-amber-200/70">Inicio:</strong> <%= l(@campaign.start_date, format: :long) %></span>
              </div>
            <% end %>
            <% if @campaign.end_date %>
              <div class="flex items-center text-stone-300">
                <svg class="w-5 h-5 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span style="font-family: 'Crimson Text', serif;"><strong class="text-amber-200/70">Fin:</strong> <%= l(@campaign.end_date, format: :long) %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Participation -->
      <div>
        <h2 class="text-amber-200/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.8rem;">Participacion</h2>
        <div class="flex items-center text-stone-300">
          <svg class="w-5 h-5 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span style="font-family: 'Crimson Text', serif; font-size: 1.05rem;"><%= @campaign.subscribers.count %> usuarios suscritos</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Subscribe Section -->
  <% unless @is_subscribed %>
    <div id="subscribe" class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-8 mb-8">
      <h2 class="text-amber-100 tracking-wider uppercase mb-5" style="font-family: 'Cinzel', serif; font-size: 1.1rem;">
        Suscribirse a esta Campana
      </h2>
      <% if @available_warbands&.any? %>
        <p class="text-stone-400 mb-4" style="font-family: 'Crimson Text', serif;">
          Selecciona la warband que quieres usar en esta campana:
        </p>
        <%= form_with url: subscribe_campaign_path(@campaign), method: :post, class: "space-y-4" do |f| %>
          <div>
            <label for="warband_id" class="block text-amber-200/80 text-sm mb-2 tracking-wider uppercase" style="font-family: 'Cinzel', serif; font-size: 0.7rem;">Warband</label>
            <select name="warband_id" id="warband_id" class="w-full bg-stone-900 border border-amber-900/40 rounded py-2 px-3 text-stone-200 focus:outline-none focus:ring-2 focus:ring-amber-700 focus:border-amber-700" style="font-family: 'Crimson Text', serif;" required>
              <option value="">-- Selecciona una warband --</option>
              <% @available_warbands.each do |warband| %>
                <option value="<%= warband.id %>"><%= warband.name %> (<%= warband.member_count %> miembros)</option>
              <% end %>
            </select>
          </div>
          <div>
            <%= f.submit "Suscribirse con esta Warband",
                class: "px-6 py-2.5 bg-gradient-to-b from-emerald-700 to-emerald-900 text-emerald-100 rounded border border-emerald-600/50 hover:from-emerald-600 hover:to-emerald-800 transition-all shadow-lg shadow-emerald-900/30 cursor-pointer",
                style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" %>
          </div>
        <% end %>
      <% else %>
        <div class="p-4 rounded border border-yellow-800/40 bg-yellow-900/20">
          <p class="text-yellow-300/80 text-sm" style="font-family: 'Crimson Text', serif;">
            No tienes warbands disponibles. Debes crear una warband antes de suscribirte a una campana.
          </p>
          <%= link_to "Crear Warband", new_warband_path,
              class: "inline-block mt-3 px-5 py-2 bg-gradient-to-b from-amber-700 to-amber-900 text-amber-100 rounded border border-amber-600/50 hover:from-amber-600 hover:to-amber-800 transition-all shadow-lg shadow-amber-900/30",
              style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Warbands in Campaign -->
  <% if @campaign.warbands.any? %>
    <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-8">
      <h2 class="text-amber-100 tracking-wider uppercase mb-5" style="font-family: 'Cinzel', serif; font-size: 1.1rem;">
        Warbands en esta Campana
      </h2>
      <div class="space-y-3">
        <% @campaign.warbands_with_users.each do |warband| %>
          <div class="flex items-center justify-between border-b border-stone-800/50 pb-3">
            <div>
              <span class="text-amber-100" style="font-family: 'Cinzel', serif; font-size: 0.9rem;"><%= warband.name %></span>
              <span class="text-stone-500 text-sm ml-2" style="font-family: 'Crimson Text', serif;">
                - <%= warband.user.name %>
              </span>
            </div>
            <% if current_user.campaigns.include?(@campaign) %>
              <%= link_to "Ver", warband_path(warband),
                  class: "text-amber-400 hover:text-amber-300 text-sm transition-colors tracking-wider uppercase",
                  style: "font-family: 'Cinzel', serif; font-size: 0.65rem;" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
