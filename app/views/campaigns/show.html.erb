<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800"><%= @campaign.name %></h1>
      <div class="flex gap-2">
        <% if campaign_owner?(@campaign) %>
          <%= link_to "Gestionar Rondas", campaign_campaign_rounds_path(@campaign), class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <%= link_to "Gestionar Warbands", manage_warbands_campaign_path(@campaign), class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        <% end %>
        <% if @is_subscribed %>
          <%= button_to "Desuscribirse", unsubscribe_campaign_path(@campaign), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500 cursor-pointer", data: { turbo_confirm: "¿Estás seguro de desuscribirte de esta campaña?" } %>
        <% else %>
          <%= button_to "Suscribirse", subscribe_campaign_path(@campaign), method: :post, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-green-500 cursor-pointer" %>
        <% end %>
        <%= link_to "Volver", campaigns_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>

    <% if @is_subscribed %>
      <div class="mb-4 p-3 bg-purple-50 border border-purple-200 rounded">
        <p class="text-purple-800 text-sm font-medium">✓ Estás suscrito a esta campaña</p>
      </div>
    <% end %>

    <div class="space-y-6">
      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Descripción</h2>
        <p class="text-gray-900 whitespace-pre-wrap"><%= @campaign.description %></p>
      </div>

      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Estado</h2>
        <% if @campaign.active? %>
          <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">Activa</span>
        <% elsif @campaign.paused? %>
          <span class="px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">Pausada</span>
        <% else %>
          <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">Finalizada</span>
        <% end %>
      </div>

      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Administrador</h2>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="text-gray-900"><%= @campaign.user.name %></span>
        </div>
      </div>

      <% if @campaign.start_date || @campaign.end_date %>
        <div class="border-b pb-4">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Período</h2>
          <div class="space-y-2">
            <% if @campaign.start_date %>
              <div class="flex items-center text-gray-700">
                <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span><strong>Inicio:</strong> <%= l(@campaign.start_date, format: :long) %></span>
              </div>
            <% end %>
            <% if @campaign.end_date %>
              <div class="flex items-center text-gray-700">
                <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span><strong>Fin:</strong> <%= l(@campaign.end_date, format: :long) %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="pb-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Participación</h2>
        <div class="flex items-center text-gray-700">
          <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span><%= @campaign.subscribers.count %> usuarios suscritos</span>
        </div>
      </div>
    </div>
  </div>

  <% if @campaign.warbands.any? %>
    <div class="mt-8 bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-bold mb-4">Warbands en esta Campaña</h2>
      <div class="space-y-3">
        <% @campaign.warbands_with_users.each do |warband| %>
          <div class="flex items-center justify-between border-b pb-2">
            <div>
              <span class="font-semibold"><%= warband.name %></span>
              <span class="text-gray-600 text-sm ml-2">
                - <%= warband.user.name %>
              </span>
            </div>
            <% if current_user.campaigns.include?(@campaign) %>
              <%= link_to "Ver", warband_path(warband),
                  class: "text-blue-500 hover:text-blue-700 text-sm" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
