<% content_for(:body_class) { "bg-stone-950" } %>
<% content_for(:raw_content) { true } %>

<%= render layout: "shared/dark_layout" do %>
  <!-- Section Title -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-10 gap-4">
    <div>
      <div class="flex items-center gap-4 mb-3">
        <div class="h-px w-12 bg-gradient-to-r from-transparent to-amber-700/60"></div>
        <svg viewBox="0 0 24 24" class="w-5 h-5 text-amber-600/60" fill="currentColor">
          <polygon points="12,2 15,9 22,9 16,14 18,21 12,17 6,21 8,14 2,9 9,9"/>
        </svg>
        <div class="h-px w-12 bg-gradient-to-l from-transparent to-amber-700/60"></div>
      </div>
      <h1 class="text-amber-100 tracking-[0.1em] uppercase" style="font-family: 'Cinzel', serif; font-size: 1.8rem; font-weight: 700;">
        Gestionar Warbands
      </h1>
      <p class="text-stone-400 mt-2" style="font-family: 'Crimson Text', serif; font-size: 1.05rem;">
        <%= @campaign.name %>
      </p>
    </div>
    <div class="flex gap-3">
      <%= link_to campaign_path(@campaign), class: "px-5 py-2.5 bg-gradient-to-b from-amber-700 to-amber-900 text-amber-100 rounded border border-amber-600/50 hover:from-amber-600 hover:to-amber-800 transition-all shadow-lg shadow-amber-900/30", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" do %>
        Ver Campana
      <% end %>
      <%= link_to my_campaigns_campaigns_path, class: "px-5 py-2.5 border border-amber-800/50 text-amber-400 rounded hover:bg-amber-900/20 hover:border-amber-700/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" do %>
        Volver
      <% end %>
    </div>
  </div>

  <% if @warbands.any? %>
    <div class="space-y-6">
      <% @warbands.each do |warband| %>
        <div class="group rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 hover:border-amber-700/50 transition-all duration-500 overflow-hidden">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-amber-100 tracking-wider uppercase" style="font-family: 'Cinzel', serif; font-size: 1.05rem;">
                  <%= warband.name %>
                </h3>
                <p class="text-stone-400 text-sm mt-1" style="font-family: 'Crimson Text', serif;">
                  Propietario: <%= warband.user.name %>
                  <% if warband.user == current_user %>
                    <span class="ml-2 px-2 py-1 text-xs text-amber-400/80 border border-amber-900/40 rounded bg-amber-900/20" style="font-family: 'Cinzel', serif; font-size: 0.55rem; letter-spacing: 0.1em;">
                      Tu warband
                    </span>
                  <% end %>
                </p>
              </div>
              <div class="flex gap-3">
                <%= link_to "Ver", warband_path(warband),
                    class: "text-amber-400 hover:text-amber-300 transition-colors tracking-wider uppercase",
                    style: "font-family: 'Cinzel', serif; font-size: 0.65rem;" %>
                <%= link_to "Editar", edit_warband_path(warband),
                    class: "text-emerald-400 hover:text-emerald-300 transition-colors tracking-wider uppercase",
                    style: "font-family: 'Cinzel', serif; font-size: 0.65rem;" %>
                <%= button_to "Remover", remove_from_campaign_warband_path(warband),
                    method: :patch,
                    data: { turbo_confirm: "¿Remover esta warband de la campana?" },
                    class: "text-red-500/70 hover:text-red-400 transition-colors tracking-wider uppercase bg-transparent border-0 p-0 cursor-pointer",
                    style: "font-family: 'Cinzel', serif; font-size: 0.65rem;" %>
              </div>
            </div>

            <div class="border-t border-stone-800/50 pt-4">
              <div class="flex justify-between items-center mb-3">
                <h4 class="text-amber-200/80 tracking-wider uppercase" style="font-family: 'Cinzel', serif; font-size: 0.75rem;">
                  Miembros (<%= warband.warband_members.count %>)
                </h4>
                <%= link_to "Anadir Miembro", new_warband_warband_member_path(warband),
                    class: "px-3 py-1.5 bg-gradient-to-b from-emerald-700 to-emerald-900 text-emerald-100 rounded border border-emerald-600/50 hover:from-emerald-600 hover:to-emerald-800 transition-all text-xs",
                    style: "font-family: 'Cinzel', serif; letter-spacing: 0.05em; text-transform: uppercase; font-size: 0.6rem;" %>
              </div>

              <% if warband.warband_members.any? %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-3">
                  <% warband.warband_members.each do |member| %>
                    <div class="p-3 rounded border border-stone-800/50 bg-stone-900/50 flex justify-between items-start">
                      <div>
                        <p class="text-amber-100 text-sm" style="font-family: 'Cinzel', serif; font-size: 0.8rem;"><%= member.name %></p>
                        <p class="text-xs text-stone-500 mt-1" style="font-family: 'Crimson Text', serif;">
                          <%= member.display_type %> -
                          F:<%= member.fuerza %>
                          D:<%= member.defensa %>
                          H:<%= member.heridas %>
                        </p>
                      </div>
                      <div class="flex gap-2">
                        <%= link_to "Editar", edit_warband_warband_member_path(warband, member),
                            class: "text-amber-400 hover:text-amber-300 transition-colors",
                            style: "font-family: 'Cinzel', serif; font-size: 0.6rem;" %>
                        <%= button_to "x", warband_warband_member_path(warband, member),
                            method: :delete,
                            data: { turbo_confirm: "¿Eliminar este miembro?" },
                            class: "text-red-500/70 hover:text-red-400 transition-colors bg-transparent border-0 p-0 cursor-pointer",
                            style: "font-family: 'Cinzel', serif; font-size: 0.7rem;" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="text-stone-500 italic mt-2" style="font-family: 'Crimson Text', serif; font-size: 0.95rem;">
                  Esta warband no tiene miembros aun.
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-stone-500 text-sm" style="font-family: 'Crimson Text', serif;">
      Total: <%= @warbands.count %> <%= @warbands.count == 1 ? 'warband' : 'warbands' %> en esta campana
    </div>
  <% else %>
    <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-5 rounded-full border border-amber-700/40 flex items-center justify-center bg-amber-900/20">
        <svg viewBox="0 0 24 24" class="w-8 h-8 text-amber-500/60" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <h3 class="text-amber-100/80 tracking-wider uppercase mb-3" style="font-family: 'Cinzel', serif; font-size: 0.95rem;">
        No hay warbands en esta campana
      </h3>
      <p class="text-stone-400" style="font-family: 'Crimson Text', serif; font-size: 1.05rem;">
        Los jugadores aun no han asignado sus warbands a esta campana.
      </p>
    </div>
  <% end %>
<% end %>
