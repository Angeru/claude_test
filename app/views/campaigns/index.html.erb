<% content_for(:body_class) { "bg-stone-950" } %>
<% content_for(:raw_content) { true } %>

<%= render layout: "shared/dark_layout" do %>
  <!-- Section Title -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-10 gap-4">
    <div>
      <div class="flex items-center gap-4 mb-3">
        <div class="h-px w-12 bg-gradient-to-r from-transparent to-amber-700/60"></div>
        <svg viewBox="0 0 24 24" class="w-5 h-5 text-amber-600/60" fill="currentColor">
          <polygon points="12,2 15,9 22,9 16,14 18,21 12,17 6,21 8,14 2,9 9,9"/>
        </svg>
        <div class="h-px w-12 bg-gradient-to-l from-transparent to-amber-700/60"></div>
      </div>
      <h1 class="text-amber-100 tracking-[0.1em] uppercase" style="font-family: 'Cinzel', serif; font-size: 1.8rem; font-weight: 700;">
        Campanas Disponibles
      </h1>
    </div>
    <div class="flex gap-3">
      <%= link_to new_campaign_path, class: "px-5 py-2.5 bg-gradient-to-b from-amber-700 to-amber-900 text-amber-100 rounded border border-amber-600/50 hover:from-amber-600 hover:to-amber-800 transition-all shadow-lg shadow-amber-900/30", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" do %>
        Crear Campana
      <% end %>
      <%= link_to my_campaigns_campaigns_path, class: "px-5 py-2.5 border border-purple-800/50 text-purple-400 rounded hover:bg-purple-900/20 hover:border-purple-700/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" do %>
        Mis Campanas
      <% end %>
      <%= link_to dashboard_path, class: "px-5 py-2.5 border border-amber-800/50 text-amber-400 rounded hover:bg-amber-900/20 hover:border-amber-700/60 transition-all", style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.75rem;" do %>
        Dashboard
      <% end %>
    </div>
  </div>

  <% if @campaigns.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @campaigns.each do |campaign| %>
        <div class="group relative rounded-lg overflow-hidden border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 hover:border-amber-700/50 transition-all duration-500">
          <div class="absolute inset-0 bg-gradient-to-b from-amber-900/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative p-6">
            <div class="flex justify-between items-start mb-3">
              <h2 class="text-amber-100 tracking-wider uppercase" style="font-family: 'Cinzel', serif; font-size: 1.05rem;">
                <%= campaign.name %>
              </h2>
              <% if @subscribed_campaign_ids.include?(campaign.id) %>
                <span class="px-2 py-1 text-xs text-purple-400/80 border border-purple-900/40 rounded bg-purple-900/20" style="font-family: 'Cinzel', serif; font-size: 0.6rem; letter-spacing: 0.1em;">
                  Suscrito
                </span>
              <% else %>
                <span class="px-2 py-1 text-xs text-emerald-400/80 border border-emerald-900/40 rounded bg-emerald-900/20" style="font-family: 'Cinzel', serif; font-size: 0.6rem; letter-spacing: 0.1em;">
                  Disponible
                </span>
              <% end %>
            </div>

            <p class="text-stone-400 text-sm leading-relaxed mb-4" style="font-family: 'Crimson Text', serif; font-size: 1rem;">
              <%= truncate(campaign.description, length: 150) %>
            </p>

            <div class="space-y-2 mb-4 text-sm">
              <div class="flex items-center text-stone-500">
                <svg class="w-4 h-4 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span style="font-family: 'Crimson Text', serif;">Administrada por: <%= campaign.user.name %></span>
              </div>
              <div class="flex items-center text-stone-500">
                <svg class="w-4 h-4 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span style="font-family: 'Crimson Text', serif;"><%= campaign.subscribers.count %> suscriptores</span>
              </div>
              <% if campaign.start_date || campaign.end_date %>
                <div class="flex items-center text-stone-500">
                  <svg class="w-4 h-4 mr-2 text-amber-600/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span style="font-family: 'Crimson Text', serif;">
                    <% if campaign.start_date && campaign.end_date %>
                      <%= l(campaign.start_date, format: :short) %> - <%= l(campaign.end_date, format: :short) %>
                    <% elsif campaign.start_date %>
                      Desde <%= l(campaign.start_date, format: :short) %>
                    <% elsif campaign.end_date %>
                      Hasta <%= l(campaign.end_date, format: :short) %>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>

            <div class="flex gap-3 pt-4 border-t border-stone-800/50">
              <%= link_to "Ver Detalles", campaign_path(campaign),
                  class: "flex-1 text-center px-4 py-2 bg-gradient-to-b from-amber-700 to-amber-900 text-amber-100 rounded border border-amber-600/50 hover:from-amber-600 hover:to-amber-800 transition-all shadow-lg shadow-amber-900/30",
                  style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" %>
              <% if @subscribed_campaign_ids.include?(campaign.id) %>
                <%= button_to "Desuscribirse", unsubscribe_campaign_path(campaign),
                    method: :delete,
                    class: "flex-1 px-4 py-2 border border-stone-700/50 text-stone-400 rounded hover:bg-stone-800/50 hover:text-red-400 hover:border-red-800/50 transition-all cursor-pointer",
                    style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;",
                    data: { turbo_confirm: "Â¿Estas seguro de desuscribirte de esta campana?" } %>
              <% else %>
                <%= link_to "Suscribirse", campaign_path(campaign, anchor: "subscribe"),
                    class: "flex-1 text-center px-4 py-2 border border-emerald-800/50 text-emerald-400 rounded hover:bg-emerald-900/20 hover:border-emerald-700/60 transition-all",
                    style: "font-family: 'Cinzel', serif; letter-spacing: 0.1em; text-transform: uppercase; font-size: 0.7rem;" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-lg border border-amber-900/30 bg-gradient-to-b from-stone-900/80 to-stone-950/80 p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-5 rounded-full border border-amber-700/40 flex items-center justify-center bg-amber-900/20">
        <svg viewBox="0 0 24 24" class="w-8 h-8 text-amber-500/60" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <p class="text-stone-400 mb-5" style="font-family: 'Crimson Text', serif; font-size: 1.1rem;">
        No hay campanas activas disponibles en este momento.
      </p>
    </div>
  <% end %>

  <div class="mt-6 text-stone-500 text-sm" style="font-family: 'Crimson Text', serif;">
    Total: <%= @campaigns.count %> campanas activas | Suscritas: <%= @subscribed_campaign_ids.count %>
  </div>
<% end %>
