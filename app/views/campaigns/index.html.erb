<div class="max-w-6xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Campañas Disponibles</h1>
      <div class="flex gap-4">
        <%= link_to "Mis Campañas", my_campaigns_campaigns_path, class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-purple-500" %>
        <%= link_to "Volver al Dashboard", dashboard_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    </div>

    <% if @campaigns.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @campaigns.each do |campaign| %>
          <div class="border rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="flex justify-between items-start mb-3">
              <h2 class="text-xl font-semibold text-gray-800"><%= campaign.name %></h2>
              <% if @subscribed_campaign_ids.include?(campaign.id) %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">Suscrito</span>
              <% else %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Disponible</span>
              <% end %>
            </div>

            <p class="text-gray-600 text-sm mb-4"><%= truncate(campaign.description, length: 150) %></p>

            <div class="space-y-2 mb-4 text-sm">
              <div class="flex items-center text-gray-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Administrada por: <%= campaign.user.name %>
              </div>
              <div class="flex items-center text-gray-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <%= campaign.subscribers.count %> suscriptores
              </div>
              <% if campaign.start_date || campaign.end_date %>
                <div class="flex items-center text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <% if campaign.start_date && campaign.end_date %>
                    <%= l(campaign.start_date, format: :short) %> - <%= l(campaign.end_date, format: :short) %>
                  <% elsif campaign.start_date %>
                    Desde <%= l(campaign.start_date, format: :short) %>
                  <% elsif campaign.end_date %>
                    Hasta <%= l(campaign.end_date, format: :short) %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="flex gap-2">
              <%= link_to "Ver Detalles", campaign_path(campaign), class: "flex-1 text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <% if @subscribed_campaign_ids.include?(campaign.id) %>
                <%= button_to "Desuscribirse", unsubscribe_campaign_path(campaign), method: :delete, class: "flex-1 bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500 cursor-pointer", data: { turbo_confirm: "¿Estás seguro de desuscribirte de esta campaña?" } %>
              <% else %>
                <%= button_to "Suscribirse", subscribe_campaign_path(campaign), method: :post, class: "flex-1 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-green-500 cursor-pointer" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No hay campañas activas disponibles en este momento.</p>
      </div>
    <% end %>

    <div class="mt-6 text-gray-600 text-sm">
      Total: <%= @campaigns.count %> campañas activas | Suscritas: <%= @subscribed_campaign_ids.count %>
    </div>
  </div>
</div>
